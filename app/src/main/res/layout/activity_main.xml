<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainScreen_Screen"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/main_scr_app_name_text_size"
        android:layout_marginBottom="40dp" />

    <Button
        style="@style/MainScreen_ButtonStyle"
        android:id="@+id/search_button"
        app:icon="@drawable/search_icon"
        android:text="@string/search_button"/>

    <Button
        style="@style/MainScreen_ButtonStyle"
        android:id="@+id/library_button"
        app:icon="@drawable/library_icon"
        android:text="@string/library_button"/>

    <Button
        style="@style/MainScreen_ButtonStyle"
        android:id="@+id/settings_button"
        app:icon="@drawable/settings_icon"
        android:text="@string/settings_button"/>

</LinearLayout>