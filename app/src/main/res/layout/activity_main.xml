<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/royal_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="17dp"
    android:paddingEnd="15dp"
    android:paddingTop="14dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/main_scr_app_name_text_size"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/search_button"
        android:textColor="@color/black_russian"
        android:textSize="@dimen/main_scr_button_text_size"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/main_scr_button_corner_radius"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_scr_button_icon_padding"
        app:iconTint="@color/black_russian"
        android:layout_marginBottom="@dimen/main_scr_button_margin_bottom" />

    <Button
        android:id="@+id/library_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/library_button"
        android:textColor="@color/black_russian"
        android:textSize="@dimen/main_scr_button_text_size"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/main_scr_button_corner_radius"
        app:icon="@drawable/library_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_scr_button_icon_padding"
        app:iconTint="@color/black_russian"
        android:layout_marginBottom="@dimen/main_scr_button_margin_bottom" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/settings_button"
        android:textColor="@color/black_russian"
        android:textSize="@dimen/main_scr_button_text_size"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/main_scr_button_corner_radius"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_scr_button_icon_padding"
        app:iconTint="@color/black_russian" />

</LinearLayout>