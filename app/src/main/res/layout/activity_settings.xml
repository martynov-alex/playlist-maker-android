<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/common_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp"
        android:layout_marginBottom="24dp">
        <ImageView
            android:id="@+id/back_button"
            style="@style/common_panel_header_back_button"
            tools:ignore="ContentDescription" />
        <TextView
            style="@style/common_panel_header_text"
            android:text="@string/settings_screen_title"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">
        <TextView
            style="@style/settings_screen_item_text"
            android:text="@string/settings_dark_theme_switch" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/theme_switcher"
            style="@style/settings_screen_item_button" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">
        <TextView
            style="@style/settings_screen_item_text"
            android:text="@string/settings_share_button"/>
        <ImageView
            android:id="@+id/share_button"
            style="@style/settings_screen_item_button"
            android:src="@drawable/settings_share_icon"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">
        <TextView
            style="@style/settings_screen_item_text"
            android:text="@string/settings_support_button"/>
        <ImageView
            android:id="@+id/support_button"
            style="@style/settings_screen_item_button"
            android:src="@drawable/settings_support_icon"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height">
        <TextView
            style="@style/settings_screen_item_text"
            android:text="@string/settings_offer_button"/>
        <ImageView
            android:id="@+id/offer_button"
            style="@style/settings_screen_item_button"
            android:src="@drawable/settings_arrow_forward_icon"
            tools:ignore="ContentDescription" />
    </FrameLayout>

</LinearLayout>