<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/yp_white</item>

        <!-- Status bar. -->
        <item name="android:statusBarColor">@color/yp_black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Common. -->
        <item name="common_status_bar_color">@color/yp_black</item>
        <item name="common_back_button_color">@color/yp_white</item>

        <!-- Main screen. -->
        <item name="main_background_color">@color/yp_black</item>

        <!-- Settings screen. -->
        <item name="common_background_color">@color/yp_black</item>
        <item name="settings_icons_color">@color/yp_white</item>
        <item name="settings_text_color">@color/yp_white</item>

        <!-- Search screen. -->
        <!-- Search screen - Search field. -->
        <item name="search_form_background_color">@color/yp_white</item>
        <item name="search_form_icons_color">@color/yp_black</item>
        <item name="search_form_hint_color">@color/yp_black</item>
        <!-- Search screen - Search result item. -->
        <item name="search_result_item_primary_text_color">@color/yp_white</item>
        <item name="search_result_item_secondary_text_color">@color/yp_white</item>
        <item name="search_result_item_icons_color">@color/yp_white</item>
        <!-- Search screen - Search result placeholders. -->
        <item name="search_result_placeholder_text_color">@color/yp_white</item>
        <item name="common_oval_button_color">@color/yp_white</item>
        <item name="common_oval_button_text_color">@color/yp_black</item>

        <!-- Audio Player screen. -->
        <item name="play_button_color">@color/yp_white</item>

    </style>
</resources>