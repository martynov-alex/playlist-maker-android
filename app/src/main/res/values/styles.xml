<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common styles -->
    <style name="Common_TitleTextStyle">
        <item name="android:textColor">@color/black_russian</item>
        <item name="android:textSize">@dimen/main_scr_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Main screen styles -->
    <style name="MainScreen_Screen">
        <item name="android:background">@color/royal_blue</item>
        <item name="android:statusBarColor">@color/royal_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainScreen_ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/main_scr_button_margin_bottom</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:backgroundTint">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="android:textSize">@dimen/main_scr_button_text_size</item>
        <item name="android:textAllCaps">false</item>

        <item name="cornerRadius">@dimen/main_scr_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_scr_button_icon_padding</item>
        <item name="iconTint">@color/black_russian</item>
    </style>

    <!-- Settings screen styles -->
    <style name="SettingsScreen_Screen">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsScreen_ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_scr_item_title_margin_start</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="android:textSize">@dimen/settings_scr_item_text_size</item>
    </style>

    <style name="SettingsScreen_ItemButtonStyle">
        <item name="android:layout_width">@dimen/settings_scr_button_icon_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/settings_scr_item_icon_margin_end</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black_russian</item>
    </style>

</resources>