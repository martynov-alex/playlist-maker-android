<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common styles -->

    <style name="Common_PanelHeader_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_panel_header_margin_start</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/common_panel_header_text_size</item>
    </style>

    <style name="Common_PanelHeader_BackButton">
        <item name="android:src">@drawable/common_arrow_back_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/common_panel_header_icon_padding</item>
        <item name="android:backgroundTint">?attr/common_background_color</item>
    </style>

    <!-- Main screen styles -->

    <style name="MainScreen_ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_bottom</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:backgroundTint">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textAllCaps">false</item>

        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <!-- Settings screen styles -->

    <style name="SettingsScreen_ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_item_title_margin_start</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
    </style>

    <style name="SettingsScreen_ItemButtonStyle">
        <item name="android:layout_width">@dimen/settings_button_icon_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_icon_margin_end</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:backgroundTint">?attr/common_background_color</item>
        <item name="iconTint">?attr/common_background_color</item>
    </style>

    <!-- Search screen styles -->

    <style name="SearchScreen_PlaceholderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/search_result_placeholder_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/search_result_placeholder_text_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/search_result_placeholder_text_margin_start_end</item>
        <item name="android:gravity">center</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/search_result_nothing_found_color</item>
        <item name="android:textSize">@dimen/search_result_placeholder_text_size</item>
    </style>

</resources>